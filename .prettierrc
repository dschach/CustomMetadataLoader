{
	"trailingComma": "none",
	"singleQuote": true,
	"tabWidth": 2,
	"printWidth": 150,
	"useTabs": true,
	"bracketSpacing": true,
	"apexInsertFinalNewline": false,
	"bracketSameLine": true,
	"xmlSelfClosingSpace": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": "*.{yml,yaml}",
			"options": { "tabWidth": 2, "useTabs": false }
		},
		{
			"files": "*.{cls,trigger}",
			"options": { "parser": "apex", "tabWidth": 2, "useTabs": true }
		},
		{
			"files": "*.{apex,soql}",
			"options": { "parser": "anonymous-apex" }
		},
		{
			"files": "*meta.xml",
			"options": {
				"parser": "html",
				"useTabs": true,
				"tabWidth": 2
			}
		},
		{
			"files": "docs/*.html",
			"options": {
				"parser": "html",
				"useTabs": false,
				"printWidth": 150,
				"htmlWhitespaceSensitivity": "css",
				"singleQuote": false
			}
		},
		{
			"files": "*.{prettierrc, json}",
			"options": {
				"parser": "json",
				"printWidth": 80,
				"useTabs": true,
				"singleQuote": false
			}
		}
	],
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
	"$schema": "https://json.schemastore.org/prettierrc"
}
